@model AspBlog.Models.Games

@{
    ViewData["Title"] = "Nový zápas";
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Cathegory" class="control-label">Kategorie</label>
                <input asp-for="Cathegory" class="form-control" />
                <span asp-validation-for="Cathegory" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Oponent" class="control-label">Soupeř</label>
                <input asp-for="Oponent" class="form-control" />
                <span asp-validation-for="Oponent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place" class="control-label">Místo</label>
                <input asp-for="Place" class="form-control" />
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label">Skóre</label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="DateOfGame" class="control-label">Datum</label>
                <input asp-for="DateOfGame" class="form-control" />
                <span asp-validation-for="DateOfGame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Describtion" class="control-label">Poznámka</label>
                <input asp-for="Describtion" class="form-control" />
                <span asp-validation-for="Describtion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GamesIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
