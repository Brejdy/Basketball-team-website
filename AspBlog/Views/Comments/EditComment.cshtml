@model AspBlog.Models.Comments

<h2>Edit Comment</h2>
<form asp-controller="Comments" asp-action="EditComment" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <label for="content">Content:</label>
    <textarea name="content" required>@Model.Content</textarea>

    <button type="submit">Save Changes</button>
    <a asp-controller="Game" asp-action="Details" asp-route-id="@Model.GameId">Cancel</a>
</form>
